<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile"
    android:background="@drawable/login_background">

    <EditText
        android:id="@+id/editProfileName"
        android:layout_marginTop="60dp"
        android:paddingStart="20dp"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="12"
        android:inputType="textEmailAddress"
        android:hint="Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@drawable/login_edit_background"/>

    <EditText
        android:id="@+id/editProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="12"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        android:hint="Username"
        android:background="@drawable/login_edit_background"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@id/editProfileName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.282" />


    <EditText
        android:id="@+id/editProfilePhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/editProfileUsername"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="12"
        android:inputType="phone"
        android:hint="Phone Number"
        android:background="@drawable/login_edit_background"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="306dp" />

    <EditText
    android:id="@+id/editProfilePassword"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="20dp"
    android:paddingStart="20dp"
    app:layout_constraintTop_toBottomOf="@id/editProfilePhone"
    android:layout_width="wrap_content"
    android:layout_height="50dp"
    android:ems="12"
    android:hint="Reset Password"
    android:background="@drawable/login_edit_background"
    android:inputType="textPassword"
    tools:layout_editor_absoluteX="92dp"
    tools:layout_editor_absoluteY="366dp" />

    <EditText
        android:id="@+id/editProfileConfirmPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:paddingStart="20dp"
        app:layout_constraintTop_toBottomOf="@id/editProfilePassword"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:ems="12"
        android:hint="Confirm Password"
        android:background="@drawable/login_edit_background"
        android:inputType="textPassword"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="366dp" />

    <Button
        android:id="@+id/btnProfileEdit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Edit"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editProfileConfirmPassword"
        android:background="@drawable/button_background"/>
</androidx.constraintlayout.widget.ConstraintLayout>