<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home"
    android:background="@drawable/login_background">


<!--    <ImageView-->
<!--        android:layout_width="35dp"-->
<!--        android:layout_height="30dp"-->
<!--        app:srcCompat="@drawable/ic_nav_button"-->
<!--        tools:ignore="VectorDrawableCompat"-->
<!--        android:layout_marginTop="25dp"-->
<!--        android:layout_marginLeft="20dp"-->
<!--        android:layout_marginStart="20dp"-->
<!--        />-->
    <TextView
        android:id="@+id/welcome_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_home"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/welcome_home"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/welcome_home" />

    <TextView
        android:id="@+id/hometext_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:text="To view student's details "
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="150dp"
        tools:layout_editor_absoluteY="204dp" />

    <Button
        android:id="@+id/btn_stdDetails"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Click here"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/hometext_1"
        android:textSize="21sp"/>


    <Button
        android:id="@+id/btn_search_student"
        android:layout_marginTop="20dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Search Student"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_stdDetails"
        android:layout_below="@id/btn_stdDetails"
        android:textSize="21sp"/>

    <com.ismaeldivita.chipnavigation.ChipNavigationBar
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:elevation="16dp"
        android:gravity="center"
        android:padding="8dp"
        app:cnb_menuResource="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent" />


<!--</RelativeLayout>-->
</androidx.constraintlayout.widget.ConstraintLayout>
