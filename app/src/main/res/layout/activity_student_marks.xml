<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/std_marks"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">
    <Toolbar
        android:id="@+id/indv_marks_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:id="@+id/indv_marks_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Marks"
            android:gravity="center"
            android:layout_marginEnd="?android:attr/actionBarSize"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"/>
    </Toolbar>
    <ImageView
        android:id="@+id/marks_bar"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/edit_std_toolbar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/indv_marks_toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        android:background="@drawable/login_edit_background">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_studentMarks_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="-4dp"
            tools:layout_editor_absoluteY="95dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>