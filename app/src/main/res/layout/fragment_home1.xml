<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FragmentHome"
    android:background="@drawable/login_background"
    android:id="@+id/home_xml">

    <TextView
        android:id="@+id/welcome_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_home"
        android:layout_centerHorizontal="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="20dp"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:layout_below="@+id/welcome_home"
        android:background="@drawable/button_background"
        app:layout_constraintTop_toBottomOf="@id/welcome_home" />



    <Button
        android:id="@+id/btn_stdDetails"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Student Details"
        android:textAllCaps="false"
        android:layout_marginTop="120dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="21sp"
        />


    <Button
        android:id="@+id/btn_search_student"
        android:layout_marginTop="20dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Search Student"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_stdDetails"
        android:textSize="21sp"/>

    <Button
        android:id="@+id/btn_toppers_list"
        android:layout_marginTop="20dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:text="Topper's List"
        android:textAllCaps="false"
        app:layout_constraintTop_toBottomOf="@id/btn_search_student"
        android:textSize="21sp"/>

