<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context="com.example.login_and_signup.StudentDetails">
    <LinearLayout
        android:id="@+id/student_data_ll"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@id/rv_studentInfo_list"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:background="@drawable/login_edit_background">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Student Details"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="30sp"/>
    </LinearLayout>
    <ImageView
        app:layout_constraintBottom_toTopOf="@id/rv_studentInfo_list"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/button_background" />

    <androidx.recyclerview.widget.RecyclerView
        app:layout_constraintTop_toBottomOf="@id/student_data_ll"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/rv_studentInfo_list"
        android:layout_width="399dp"
        android:layout_height="618dp"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="95dp"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/add_symbol"
        android:textSize="35sp"
        app:srcCompat="@drawable/button_background"
        tools:layout_editor_absoluteX="321dp"
        tools:layout_editor_absoluteY="641dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/ic_add_white_24"
        />



</androidx.constraintlayout.widget.ConstraintLayout>



