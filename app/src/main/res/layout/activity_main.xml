<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/login_background">
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainActivityParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="16dp"
        android:src="@mipmap/code_android_logo" />

    <EditText
        android:id="@+id/sign_in_username"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="280dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_person_2"
        android:hint="@string/username"
        android:text="bbb"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp" />


    <EditText
        android:id="@+id/sign_in_password"
        android:layout_below="@id/sign_in_username"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:text="bbb"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp">

        </EditText>

    <ImageButton
        android:id="@+id/btn_show_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:src="@drawable/ic_show_password"
        android:layout_alignEnd="@+id/sign_in_password"
        android:layout_alignTop="@+id/sign_in_password"
        android:paddingTop="11dp"
        android:paddingEnd="15dp"/>

    <TextView
        android:id="@+id/forgot_password"
        android:layout_below="@id/sign_in_password"
        android:layout_alignStart="@id/sign_in_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:padding="10dp"
        android:text="@string/forgot_password" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:layout_marginTop="440dp"
        android:textSize="21sp"/>


    <Button
        android:id="@+id/btn_signup"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@id/btn_signin"
        android:textSize="21sp"
        />

    <EditText
        android:id="@+id/change_base_url"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:hint="base url"
        android:layout_below="@+id/btn_signup"
        android:paddingStart="20dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp" />

    <Button
        android:id="@+id/btn_change_base_url"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:background="@drawable/button_background"
        android:text="Change"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@id/change_base_url"
        android:textSize="21sp"
        />
</RelativeLayout>

    <ProgressBar
        android:id="@+id/progress_loader"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
