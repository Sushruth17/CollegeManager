<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/login_background">
    <Toolbar
        android:id="@+id/edit_std_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimaryDark"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:popupTheme="@style/AppTheme.PopupOverlay">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Student Details"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textSize="30sp"/>
    </Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@drawable/button_background"
        android:layout_below="@+id/edit_std_toolbar"/>

    <TextView
        android:id="@+id/edit_name_invalid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Incorrect Format"
        android:textColor="#AC0000"
        android:visibility="gone"
        android:layout_above="@id/edit_name_ll"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/edit_name_ll"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="130dp"
        android:layout_marginBottom="20dp">
         <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Name:"
             android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@drawable/login_edit_background"
            android:inputType="text" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_age_ll"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/edit_name_ll"
        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Age:"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edit_age"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@drawable/login_edit_background"
            android:inputType="number" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_address_ll"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/edit_age_ll"

        android:layout_marginBottom="20dp">
        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Address:"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />
        <EditText
            android:id="@+id/edit_address"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/login_edit_background"
            android:paddingStart="25dp"
            tools:text="abcd"
            android:inputType="text" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/edit_parent_name_ll"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/edit_address_ll"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Parent Name:"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_parent_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@drawable/login_edit_background"
            android:inputType="text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/edit_branch_ll"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_below="@id/edit_parent_name_ll"
        android:layout_marginBottom="20dp">

        <TextView
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="Branch:"

            android:gravity="center_horizontal"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/edit_branch"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="25dp"
            android:background="@drawable/login_edit_background"
            android:inputType="text" />
    </LinearLayout>


    <Button
        android:id="@+id/btn_edit"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="Edit"
        android:textSize="21sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/edit_branch_ll"
        android:background="@drawable/button_background"
        android:textAllCaps="false"/>

</RelativeLayout>