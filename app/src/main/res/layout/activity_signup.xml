<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/login_background"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"/>


    <EditText
        android:id="@+id/sign_up_name"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="100dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_person_2"
        android:hint="Name"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_user" />

    <EditText
        android:id="@+id/sign_up_username"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_name"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_person_2"
        android:hint="Username"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/sign_up_email_id"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_username"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_email"
        android:hint="Email Id"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp"/>

    <EditText
        android:id="@+id/sign_up_phone_number"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_email_id"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_phone"
        android:hint="Phone Number"
        android:inputType="phone"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_user" />

    <EditText
        android:id="@+id/sign_up_password"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_phone_number"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_password" />

    <EditText
        android:id="@+id/sign_up_confirm_password"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_password"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:drawableStart="@drawable/ic_password"
        android:hint="@string/confirm_password"
        android:inputType="textPassword"
        android:drawablePadding="10dp"
        android:background="@drawable/login_edit_background"
        android:padding="10dp"
        android:drawableLeft="@drawable/ic_password" />


    <Button
        android:id="@+id/activity_sign_up_button"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_width="280dp"
        android:layout_centerHorizontal="true"
        android:layout_height="50dp"
        android:background="@drawable/button_background"
        android:text="@string/sign_up"
        android:textAllCaps="false"
        android:layout_marginTop="20dp"
        android:layout_below="@id/sign_up_confirm_password"
        android:textSize="21sp"
        />


</RelativeLayout>
</ScrollView>