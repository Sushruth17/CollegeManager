<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.login_and_signup">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".IndividualUserData"
            android:theme="@style/LoginPage"/>
        <activity
            android:name=".StudentFees"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".IndividualStudent"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".UserDetails"
            android:theme="@style/LoginPage" />
        <!--
               Set to true if your app is Standalone, that is, it does not require the handheld
               app to run.
        -->
        <activity
            android:name=".CreateUser"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".TopperList"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".ResetPassword"
            android:theme="@style/LoginPage" />
        <activity android:name=".EditProfile" />
        <activity
            android:name=".EditStudent"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".AfterSearch"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".SearchStudent"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".StudentMarks"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".AddStudent"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".StudentDetails"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".Home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Signup"
            android:theme="@style/LoginPage" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/LoginPage">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>